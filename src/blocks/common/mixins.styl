// faster transition
faster()
  transition-duration: duration/2

// placeholder color
placeholder(color)
  &::-webkit-input-placeholder { color: color; }
  &::-moz-placeholder { color: color; opacity: 1; }
  &:-moz-placeholder { color: color; opacity: 1; }
  &:-ms-input-placeholder { color: color; }

// font smoothing
smooth-font()
  -webkit-font-smoothing: antialiased

// clearfix
clearfix()
  &:after
    display: block
    content: ''
    height: 0
    overflow: hidden
    clear: both

// fullsize
fullsize()
  position: absolute
  left: 0
  top: 0
  width: 100%
  height: 100%
